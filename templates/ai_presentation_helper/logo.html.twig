{% extends 'base.html.twig' %}


    {% set titleMetadata = 'Création de logo pour votre projet, automatisée par IA' %}
    {% set metadataDescription = "Service gratuit et sans inscription, laissez-vous guider pour créer le logo parfait pour votre projet. Aucune compétence en graphisme n'est requise." %}
    {% set metadataImageUrl %}{{asset ('project_presentation_advice/adam_technology_touch.jpg', 'larger')}}{% endset %}
    {% set currentPageUrl = app.request.uri %}

{% block headTag %}

    <meta name="description" content="{{metadataDescription}}">
    <meta name="author" content="Laurent G.">
    <meta name="keywords" content="IA, Création, Logo, Projet">
    <meta name="date" content="2023-12-12">

    {{ _self.openGraph(titleMetadata, 'Propon', currentPageUrl, metadataDescription, 'product', metadataImageUrl, null) }} {# Call from base.html.twig #}
    
{% endblock %}


{% block title %}{{titleMetadata}}{% endblock %}

{% block body %}

<div class="page-container">

    <div class="d-none d-md-flex justify-content-center align-items-center">
    
        <img class="img-fluid me-2" width="80" src="{{asset ('project_presentation_advice/advice.svg', 'larger')}}" loading="lazy" alt="Une icône qui représente deux bulles de BD, dans la première un point d'interrogation représentatant une question, dans la seconde le symbole i qui réprésente une information, un conseil."><h1 class="h3 text-center">Création <span class="highlight1">automatique</span> de logo pour <span class="">VOTRE Projet</span></h1>
 
        <style>
        
                    
            .highlight1 {
                display: inline-block;
                padding: .25em 10px;
                background: #b8e0ad;
                color: #ffffff;
                border-radius: 5px;
            }
                    
       
        </style>

      
    </div>


    <div class="">
    
     <style>
        .grid-container {
            display: grid;
            grid-template-columns: auto auto auto auto;
            padding: 10px;
        }
        .grid-item {
            background-color: rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(0, 0, 0, 0.8);
            padding: 10px;
            font-size: 14px;
            text-align: center;
            margin: 10px;
        }
        .grid-item img {
            width: 100%;
            height: auto;
        }
        .grid-item:hover {
            background-color: #ddd;
            cursor: pointer;
        }
    </style>
</head>
<body>

<h2>Choisissez un style de logo</h2>

<div class="grid-container">
  <label class="grid-item"><input type="radio" name="logo_style" value="minimalist">Minimaliste<br><img src="images/minimalist.png"></label>
