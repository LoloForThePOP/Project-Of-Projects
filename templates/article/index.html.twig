{% extends 'base.html.twig' %}

{% import "utilities/_macro_articles_cards.html.twig" as artCards %}

{% block title %}Articles{% endblock %}

{% block body %}

    <div class="page-container">

        <h1 class="page-title text-center fw-bold">ARTICLES</h1>
    
        <div class="article-cards-container row row-cols-1 row-cols-md-4 g-4 px-md-4">
        
            {% for article in articles %}

                {{ artCards.articleCards (article) }}
  
            {% endfor %}
            
        </div>

    </div>

    
      <style>

        .page-title{
            margin-bottom: 35px;
        }
        
        .article-card{
            margin-bottom: 20px;
        }

        @media screen and (max-width: 580px) {

            .page-title{
                margin-bottom: 25px;
            }
            
            .article-cards-container {
                display: flex;
                flex-wrap: nowrap;
                overflow-x: auto;
            }

            .article-card{
                margin-bottom: 0px;
            }

        }

      </style>

{% endblock %}
