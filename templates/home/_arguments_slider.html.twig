{% macro carouselItem(title, imageName, imgAlt, textContent, isActive) %}

    <div class="carousel-item {{ isActive ? 'active' }}">

      <div class="container col-lg-9 px-0">
        
        <div class="row">
          
          {# Upper decoration : diagonal box #}

          <div class="diagonal-band-box col-12">

            <div class="diag">{{title}}</div>

          </div>

          <div class="content-container row col-12 pe-0">
            
            <div class="col-lg-5 img-container pe-0">
                <img class="" src="{{asset('homepage/rational_arguments_slider/' ~ imageName ~ '.webp', 'larger')}}" alt="{{imgAlt}}" loading="lazy">  
            </div>

            <div class="col-lg-7 text-container pe-0">{{textContent}}</div>
          
          </div>
          
          <div class="footerBand col-12"></div>

        </div>

      </div>

    </div>    

{% endmacro %}

