{% macro carouselItem(title, imageName, textContent, isActive) %}

    <div class="carousel-item {{ isActive ? 'active' }}">

      <div class="container col-lg-9 px-0">
        
        <div class="row">
          
          {# Upper decoration : diagonal box #}

          <div class="diagonal-band-box">

            <div class="diag">{{title}}</div>

          </div>
          
          <div class="col-lg-5 content-container img-container">
              <img class="" src="{{asset('homepage/rational_arguments_slider/' ~ imageName ~ '.webp', 'larger')}}" alt="" loading="lazy">  
          </div>

          <div class="col-lg-7 content-container text-container">{{textContent}}</div>

        </div>


        <div class="footerBand row"></div>
      
      </div>

    </div>    

{% endmacro %}

