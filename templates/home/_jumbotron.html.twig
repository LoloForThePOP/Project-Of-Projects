{% embed "utilities/jumbotron_skeleton.html.twig" %}

    {% block image %}

   
        <img src="{{asset ('misc/homepage_hands_volunteers.png', 'larger')}}" class="jumbotron-img d-block mx-lg-auto img-fluid" style="border-radius:0.65rem;" alt="Raised hands from people who Want to volunteer" width="500" loading="lazy">


    {% endblock %}

    {% block text %}

        <h1 class="jumbotron-title display-5 lh-1 mb-lg-4 text-success text-center">Ici on présente nos Projets</h1>

        <p class="jbtr-descr text-center text-md-start lead"><strong><span class="green-highlight">On présente nos projets pour agir positivement.</span><span class="display-md-none"> </span> Présentez votre projet et rendez-le <b>plus visible</b> grâce à notre outil simple et rapide. Propon est une initiative <b style="color:green;">ouverte</b> et <b style="color:green;">gratuite</b>.</strong></p>

        <div class="d-flex flex-column flex-md-row justify-content-center align-items-center pt-3">

            <a class="" href="{{path('static', {'page_name': "short_manifesto",})}}">

                <button class="jbtr-cta-btn fw-bold btn d-flex justify-content-center align-items-center pt-2 pe-4 me-md-4" style=" height:50px; padding-bottom: 10px;" data-track-click='{"key":"read-the-pop-manifesto"}'>

                <img class="m" src="{{ asset('reading_book.png', 'misc')}}" width="32" alt="a opened book with hands handling it">
                <span class="ps-1">Lire notre Manifesto</span>
            
                </button>
        
            </a>

            <a href="{{path('create_presentation')}}">

                <button class="jbtr-cta-btn btn d-flex justify-content-center align-items-center px-3 pt-2 mb-3 mb-md-0" data-track-click='{"key":"clicked-jumbotron-create-presentation"}'>
        
                  <img class="mb-2" src="{{ asset('add_presentation.svg', 'misc')}}" alt="bucket with a plus icon">
                  
                  <span class="fw-bold ps-2">Présenter un projet maintenant</span>
              
                </button>
        
            </a>

        </div>

        <style>
            .jumbotron-title{
                font-size: 34px;
                
            }
            .jbtr-descr .green-highlight{
                background-color: #d1e7dd;
                border-radius: 4px;
                padding : 4px 8px 4px 8px; 
            }
            .jbtr-cta-btn{
                min-width: 202px;
                border-color: rgb(216, 216, 201);
                
            }
            .jbtr-cta-btn:hover{
                background-color: rgb(245, 255, 243);
            }
            
            @media screen and (max-width: 580px) {
                .jumbotron-title{
                    font-size: 24px;
                    margin-left: -3px;
                    margin-right: -3px;
                    
                }
                .jbtr-cta-btn{
                    min-width: 230px;
                    
                }
            }
        </style>

    
    {% endblock %}

{% endembed %}