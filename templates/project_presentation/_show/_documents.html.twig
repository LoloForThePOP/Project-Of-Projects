
{% block stylesheet %}

    <link href="/css/document_representation.css" rel="stylesheet">

{% endblock %}

{% embed "/project_presentation/_show/structure_content_skeleton.html.twig" with {'iconName': "documents", 'title': "Documents Attach√©s",} %}

    {% block editButtons %}

        {# Add document button (triggers a modal) #}

        <button data-bs-toggle="modal" data-bs-target="#AddDocumentFormModal" class="pp-edition-mode btn btn-light btn-sm">+ Ajouter</button>

    {% endblock %}

    {% block mainContent %}

        <div id="documents" class="js-elements-list row sm-horiz-scroll ps-4 ps-md-5">

            {% for document in presentation.documents %}
                
            <!-- Document Representation with Title -->

                {# bordered container with delete icon (outer representation) #}

                <div id="{{document.id}}" class="js-sortable-element document-outer me-3" >

                    <a href="{{path('update_document', {'stringId': stringId, 'id_element' : document.id })}}" class="h-100 text-body text-decoration-none">

                        {# inner document representation #}

                        {% include 'project_presentation/edit/documents/_inner_representation.html.twig' %}

                    </a>

                    {# delete document (Red Cross) button #}

                    <button type="button" data-elements-type="documents" class="js-delete-element pp-edition-mode btn delete-button" data-id="{{document.id}}"></button>

                </div>
                
            {% endfor %}

        </div>

    <style>
                
        @media screen and (max-width: 580px) {

            .sm-horiz-scroll{
                flex-wrap: nowrap;
                overflow-x: auto;
            }          

        }


    </style>

    {% endblock %}

{% endembed %}





