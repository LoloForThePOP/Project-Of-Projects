            {# Show more news text content #}

            <script>

                $(document).ready(function(){

                    $('.show-more span').on('click', function(e){
                        e.preventDefault();
                        var $this = $(this); 
                        var $content = $this.closest('.news-card').find('.text-content');
                        $content.removeClass("hideContent").addClass("showContent");
                        $(this).parent().hide();
                        

                    });

                })
            </script>


