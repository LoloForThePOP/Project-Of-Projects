<!-- Next and previous buttons -->
<a class="" onclick="plusSlidesNews(-1)">&#10094;</a>
<a class="" onclick="plusSlidesNews(1)">&#10095;</a>


                        
                    </div>


                {% else %} {# Only one news, we do not use a slider #}

