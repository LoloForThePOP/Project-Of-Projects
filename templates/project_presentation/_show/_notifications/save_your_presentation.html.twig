<div class="pp-edition-mode">
    
    <div class="notif-save-presentation notification d-flex flex-column align-items-center alert alert-dismissible fade border show fw-bold p-2 py-4" role="alert">

        <h5 class="text-center">
            
            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-exclamation-triangle-fill text-primary me-2" viewBox="0 0 16 16">
                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
            
            </svg>
        
            <span class="h5 fw-bold align-bottom me-2">
                Ne perdez pas votre travail. Enregistrez la présentation résumé de votre projet sur Propon. 
            </span>

            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-exclamation-triangle-fill text-primary me-2" viewBox="0 0 16 16">
                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
            
            </svg>

        </h5>

        <hr>


        <div class="indent-container col-md-6 text-center">

            {{form_start(newUserForm)}}

                <div class="mb-3">
                    {{ form_label(newUserForm.email) }}
                    {{form_errors(newUserForm.email)}}
                    {{ form_widget(newUserForm.email) }}
                </div>

                <div class="mb-4">
                    {{ form_label(newUserForm.plainPassword) }}
                    {{ form_errors(newUserForm.plainPassword) }}
                    {{ form_widget(newUserForm.plainPassword) }}
                </div>

                {#   <div>
                    {{ form_label(newUserForm.agreeTerms) }}
                    {{ form_widget(newUserForm.agreeTerms) }}
                </div> #}



                <!-- ui Actions Buttons -->

                <div class="mt-5">

                    <button type="submit" value="" class="btn btn-validate border rounded-3 me-3 mb-2">
                        <span class="h5 fw-bold">Créer mon compte Propon gratuit et<br> Enregistrer le résumé de mon projet ✔️</span>
                    </button>

                </div>

            {{form_end(newUserForm)}}

        </div>



    </div>  
    
</div>


<style>

    .notif-save-presentation{

        background-color: #fffcf3;

    }

    .checked .red-cross, .check-mark {
        display: none;
    }

    .checked .check-mark{
        display: inline;
    }

    .indent-container{
       
    }

    .inline-text-trigger-action{

        color: inherit;
        border-radius: 6px;
        cursor: pointer;
        padding: 5px;
        

    }


    .inline-text-trigger-action:hover{

        background-color: lightblue;
        
    }

    @media screen and (max-width: 810px) {

        .indent-container{
            padding-left: 15px;
        }

    }


    @media screen and (max-width: 580px) {

        .indent-container{
            padding-left: 0;
        }

    }

</style>
