<div class="pp-upper-box row">

    <div class="container">

        {# Title Displayed at the top (only for small screens) #}

        <div class="row d-md-none">

            {% include 'project_presentation/_show/_upper_box/_title.html.twig' %}

        </div>

        {# Logo Column & {Title + Goal + keywords} Column #}

        <div class="row ">

            {# a logo is displayed in two case : it already exists; or we display a fake logo placeholder for user presenters only #}

            {% if presentation.logo or userPresenter %}
                
                {# Logo Column #} {# when fake logo placeholder, it is only displayed for userPresenter (so we add pp-edition-mode class) #}

                <div class="pp-logo-container col-4 col-md-3 col-lg-2 {% if not presentation.logo and userPresenter %} pp-edition-mode {% endif %}">

                    {% include 'project_presentation/_show/_upper_box/_logo.html.twig' %}

                </div>

            {% endif %}

            {# Goal Column (+ Title & Keywords only for >= Medium screens) #}

            <div class="col d-flex align-items-center">

                <div class="container px-0 px-md-2 px-lg-4">

                    {# Title Display only >= Medium Screens #}

                    <div class="row d-none d-md-block">

                        {% include 'project_presentation/_show/_upper_box/_title.html.twig' %}
        
                    </div>


                    {# Goal Display #}
        
                    <div class="row">

                        {% include 'project_presentation/_show/_upper_box/_goal.html.twig' %}
                        
                    </div>

                    {# Keywords Display only >= Medium Screens #}

                    <div class="row d-none d-md-block">
        
                        {% include 'project_presentation/_show/_upper_box/_keywords.html.twig' %}

                    </div>


                </div>


            </div>

        </div>

        {# Keywords Display only Small Screens #}

        <div class="row d-md-none">

            {% include 'project_presentation/_show/_upper_box/_keywords.html.twig' %}

        </div>

    </div>

</div>


<style>

    .pp-placeholder-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

    .pp-upper-box {
        margin-bottom: 40px;
    }

    .pp-logo-container{

        display: flex;
        align-items: center;
        justify-content: center;
    }

    .pp-title{
        display: inline-block;
    }

    .pp-goal{
        display: inline-block;
    }


        
    @media screen and (max-width: 580px) {

        .pp-upper-box {
            margin-bottom: 10px;
        }



    }

</style>