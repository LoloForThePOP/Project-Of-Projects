<div class="pp-upper-box pp-struct-container row">

    <div class="container left-col-md col-lg-9 ">

        {# Title Displayed at the top (only for small screens) #}

        <div class="row d-md-none">

            {% include 'project_presentation/_show/_upper_box/_title.html.twig' %}

        </div>

        {# Logo Column & {Title + Goal + keywords} Column #}

        <div class="row">

            {# a logo is displayed in two case : it already exists; or we display a fake logo placeholder for user presenters only #}

            {% if presentation.logo or userPresenter %}
                
                {# Logo Column #} {# when fake logo placeholder, it is only displayed for userPresenter (so we add pp-edition-mode class) #}

                <div class="pp-logo-container edit-hoverable-item {% if not presentation.logo and userPresenter %} pp-edition-mode {% endif %}">

                    {% include 'project_presentation/_show/_upper_box/_logo.html.twig' %}

                </div>

            {% endif %}

            {# Goal Column (+ Title & Keywords only for >= Medium screens) #}

            <div class="col d-flex align-items-center">

                <div class="container px-0 ps-md-2">

                    {# Title Display only >= Medium Screens #}

                    <div class="d-none d-md-block">

                        {% include 'project_presentation/_show/_upper_box/_title.html.twig' %}
        
                    </div>

                    {# Goal Display #}
        
                    <div class="">

                        {% include 'project_presentation/_show/_upper_box/_goal.html.twig' %}
                        
                    </div>

                    {# Keywords Display only >= Medium Screens #}

                    <div class="d-none d-md-block">
        
                        {% include 'project_presentation/_show/_upper_box/_categories_keywords.html.twig' %}

                    </div>


                </div>


            </div>

        </div>

        {# Keywords Display only Small Screens #}

        <div class="keywords-container row d-md-none">

            {% include 'project_presentation/_show/_upper_box/_categories_keywords.html.twig' %}

        </div>

    </div>

    <div class="container right-col-md col-lg-3">
        
        {# WIP - project status or progression - edition mode #}

        {% if userPresenter %}

            <div class="">
                    
                <div data-bs-toggle="modal" data-bs-target="#project_status_edition" class="pp-edition-mode select-status-button d-flex px-2 py-2">

                    <img class="mb-1 me-2" src="{{ asset('progress_status.svg', 'pp_wysiwyg')}}" alt="project status icon" width="27">
                    
                    <span class="h5 ps-1">Statut - Progression</span>
                
                </div>

                <div class="">

                    {% include 'project_presentation/edit/_status.html.twig' %}

                </div>
                
            </div>

        {% endif %}

    </div>

</div>


<style>


    .right-col-md{
        display: flex;
        justify-content: center;
        padding-left: 10px;
        border-left: 1px solid rgb(204, 204, 161);   
    }

    .select-status-button{

        border-color: rgb(216, 216, 201); 
        border-bottom: 1px solid #ddddb1;
        border-left:0; 
        border-right:0; 
        border-top:0;
        cursor: pointer;
          
    }

    .select-status-button:hover{

        background-color: #e0ecff;
          
    }


    .pp-placeholder-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

    .pp-upper-box {
        margin-bottom: 40px;
    }

    .pp-logo-container{

        position: relative;

        display: flex;
        align-items: center;
        justify-content: center;

        flex: 0 0 auto;
        
        width: 19%;

        padding-right: 0;

    }



        
    @media screen and (min-width: 520px) {
            
        .pp-upper-box {

            margin-left: 0; /* Overriding bootstrap row class defaults defaults */
            margin-right: 0;

            padding: 20px 12px 20px 12px; /* Overriding some pp-struct-container defaults */

        }

    }
        


        
    @media screen and (max-width: 990px) {
            
        .pp-logo-container{

            width: 21%;

        }
    }
        
    @media screen and (max-width: 580px) {

        .pp-upper-box { /* Overriding some pp-struct-container defaults */
            margin-bottom: 10px;
            padding: 0;
            padding-bottom: 20px;
            border-top: 0;
            border-left: 0;
            border-right: 0;
            border-radius: 0;
        }
   
        .keywords-container{

            margin-top: 11px;
            
        }

        .pp-logo-container{

            display: flex;
            align-items: center;

            width: 25%;

        }

    }

</style>