<!-- Project Categories and Keywords Presentation -->

{% if hasKeywords or countCategories > 0 %}

    <div class="pp-categories-keywords edit-hoverable-item text-left" >

        {% if hasKeywords %}

            <!-- Project Keywords Display -->

            <span id="pp-keywords" class="d-inline">

                {% set keywords = presentation.keywords | split(',') %}

                {% for keyword in keywords %}

                    #{{keyword | title | replace({" " : ""}) }}

                {% endfor %}

            </span>

            <style>

                #pp-keywords{
                    margin-right:5px;
                }

            </style>

        {% endif %}

        <!-- Project Categories Display -->

        {% if userPresenter or countCategories > 0 %}

            <div id="pp-categories" class="">

                <div id="categories-dropdown" data-bs-toggle="dropdown" aria-expanded="false" class="d-inline" type="button">

                    <img id="categories-unroll-icon" src="{{ asset('categories.svg', 'misc')}}" alt="categories icon">Catégories<span class="pp-consultation-mode">▾</span>

                </div>

                <ul id="categories-dropdown-content" class="dropdown-menu" aria-labelledby="categories-dropdown">

                    {% if countCategories > 0 %}

                        {% for category in presentation.categories %}

                            <li class="" >
                                
                                <img class="category-icon" src="{{asset ("project_categories/"~ category.uniqueName ~".svg", 'icons')}}" alt="Icône {{ category.uniqueName }}" loading="lazy">
                                
                                {{category.descriptionFr}}
                            
                            </li>

                        {% endfor %}
                    
                    {% endif %}
                
                </ul>

                <style>

                    #pp-categories{
                        display: inline-block;
                    }

                    #categories-unroll-icon {
                        width: 28px;
                        margin-right: 3px;
                        margin-bottom: 3px;
                    }

                    #categories-dropdown-content{
                        padding: 11px;
                        font-weight:bold;
                        
                    }

                    #categories-dropdown-content li{
                        
                        margin-bottom: 5px;
                        
                    }

                    #categories-dropdown-content li:last-of-type{
                        
                        margin-bottom: 0px;
                        
                    }

                    #categories-dropdown-content .category-icon{
                        width: 24px;
                        margin-right: 4px;
                    }

                </style>

            </div>

        {% endif %}

        <!-- Edit Project Categories & Keywords Button -->

        {% if userPresenter %}

            {# Tiny Screens

            <a class="pp-edition-mode ms-2 ms-md-0" href="{{ path('select_categories_keywords', {'stringId': presentation.stringId}) }}">

                <img class="edit-icon d-lg-none" src="{{ asset('edit.svg', 'pp_wysiwyg')}}" height="17" width="17" alt="edit icon" >
                
            </a> #}

            <a class="pp-edition-mode coverable-link" data-bs-toggle="modal" data-bs-target="#reusable-modal" href="#" data-get-chunk='{"name": "edit_categories_keywords", "target": "#reusable-modal .modal-body"}' data-chunk-params='{"idPP": "{{presentation.id}}"}'></a>

            {# href="{{ path ('select_categories_keywords', {'stringId': presentation.stringId}) }} #}

        {% endif %}


    </div>
    
    <!-- Keywords Styles -->

    <style>

        .pp-categories-keywords{

            position: relative;

            font-size: 18px;
            font-weight: bold;
            color:#065fd4;
        }

        @media screen and (max-width: 580px) {

            .pp-categories-keywords{

                font-size: 15px;
                font-weight:bold;
                text-align: center;

            }

        }

    </style>

{% endif %}

{% if userPresenter %} {# placeholder when no keywords and no category #}

    <a class="pp-edition-mode text-decoration-none ps-md-0 text-body" data-bs-toggle="modal" data-bs-target="#reusable-modal" href="#" data-get-chunk='{"name": "edit_categories_keywords", "target": "#reusable-modal .modal-body"}' data-chunk-params='{"idPP": "{{presentation.id}}"}'>
        
        <div id="categories-keywords-placeholder" class="">

            <img class="keywordsIcon img-fluid" src="{{ asset('hashtag.svg', 'pp_wysiwyg') }}" height="25" width="25" alt="add keywords icon" >

            <span class="">Catégories & Mots-clés</span>

        </div>

    </a>

    <style>

		#categories-keywords-placeholder{

            display: flex;
            align-items: center;

            width: 400px;
            padding: 5px 10px;
            margin-top: 3px;

            font-size: 20px;
            font-weight: bold;

            cursor: pointer;

		}

        
        .keywordsIcon {

            margin-right : 15px;
            
        }

		#categories-keywords-placeholder:hover {
			
			background-color: lavender;
		}


		@media screen and (max-width: 580px) {

			#categories-keywords-placeholder{

                width:100%;
                font-size: 16px;
                padding-left: 12px;
                margin-bottom: 5px;

			}
                
            .keywordsIcon {

                height: 20px;
                width: 20px;
                
            }

		}

    </style>
    

{% endif %}