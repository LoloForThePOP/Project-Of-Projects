
{% if not presentation.logo is empty %}

    <img id="pp-logo" class="img-fluid" src="{{ vich_uploader_asset(presentation) | imagine_filter('logo')}}" alt="Logo du Projet">

    {# Edit Logo button #}

    <a class="pp-edition-mode" href="{{ path('edit_pp_base', {'stringId': presentation.stringId}) }}">

        <div class="edit-icon-position d-lg-none">

            <img class="edit-icon" src="{{ asset('edit.svg', 'pp_wysiwyg')}}" height="17" width="17" alt="edit icon" >

        </div>
        
    </a>

    <a class="pp-edition-mode coverable-link" href="{{ path ('edit_pp_base', {'stringId': presentation.stringId}) }}"></a>

{% else %}

    <a id="logoPlaceholder" data-bs-toggle="modal" data-bs-target="#add_logo_form_modal" class="pp-edition-mode text-decoration-none">

        <img class="no-logo-image img-fluid" src="{{ asset('no_logo.svg', 'pp_wysiwyg') }}" height="90" width="90" alt="add a logo icon" >
    
    </a>

{% endif %}


<style>

    #pp-logo{
        
        border-radius: 4px;
    }

    .pp-logo-container .edit-icon-position{

        position: absolute; 
        bottom:0; 
        right:0; 
        
        width:30px; 
        height:30px;

        background-color: #fff;
    
    }

    #logoPlaceholder{

        display: flex;
        align-items: center;
        justify-content: center;

        min-height: 140px;
        width: 100%;

        border: 1px solid rgb(221, 221, 177);
        border-radius: 6px;

    }

    #logoPlaceholder:hover {
        cursor: pointer;
        background-color: lavender;
    }



    @media screen and (max-width: 580px) {

        #pp-logo{
            border-radius: 4px;
            max-width: 55px;
            max-height: 55px;
        }

        .pp-logo-container .edit-icon-position{
    
            width: 22px;
            height: 22px;
            display: flex;
            align-items: center;
            justify-content: center;
        
        }


        #logoPlaceholder{
            padding: 15px;
            min-height: initial;
            
        }


    }

</style>
