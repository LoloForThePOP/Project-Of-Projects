<!-- Project Title Presentation -->

{% if presentation.title is not empty or userPresenter %}

    <!-- Structure Container -->

    <div class="pp-title-container">

        <!-- Project Title Display -->

        <h1 id="" class="pp-title editable-field" data-edit='{"entity": "PPBase", "property": "title", "id": {{presentation.id}} }' data-text="Titre du Projet" >{{presentation.title is not empty ? presentation.title[:1] | upper ~ presentation.title[1:]}}</h1>

        {% if presentation.title is empty and userPresenter %} {# a strikethrough placeholder is displayed on contenteditable #}

        <div class=""><div class="line-through pp-edition-mode"></div></div>

            <script>

                $(document).ready(function(){

                    $(".pp-title").on('click', function (){

                        $('.line-through').remove();

                    });

                });

            </script>

            <style>

                .line-through {
                    position: absolute;
                    display: block !important;
                    width: 203px;
                    height: 3px;
                    top: 48%;
                    background-color: #c8e0ff;
                }

                @media screen and (max-width: 580px) {

                    .line-through{
                        display: none !important;
                    }

                }


            </style>

        {% endif %}

    </div>

{% endif %}

    <!-- Some Styles -->

    <style>

        .pp-title-container{
            position: relative;
            display: inline-block;
        }

        .pp-title{

            display: inline-block;
            position: relative;
            width: 100%;

            line-height: 1;

            padding-top: 0px;
            margin-bottom: 0px;

            font-size: 28px;
            font-weight: bold;
            color: navy;

        }


        @media screen and (max-width: 580px) {

            .pp-title{

                padding-top: 2px;
                padding-left: 0px;
                padding-right: 0px;
                max-width: 100%;

                margin-bottom: 20px;

                font-size: 22px;
                font-weight: normal;

                text-align: center;
            }

        }

    </style>
