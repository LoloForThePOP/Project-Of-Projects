{% extends 'base.html.twig' %}

{% block title %}Envoyer un Message{% endblock %}

{% block body %}


    <style>

        textarea::placeholder {
            font-size:1.15em !important;
            font-weight:bold;
            color: #66666d !important;
        }
        
    </style>

    <div class="page-container container px-0 px-md-3 col-md-7 col-lg-5">
        
        <h3 class="mt-2 mb-5 text-center text-md-start fw-bold">Envoyer un message priv√©</h3>
            
        {{ form_start(form) }}

        <div class="mb-5">

            {{ form_widget(form.content) }}
        
        </div>

        <!-- Actions Buttons -->

        <div class="d-flex justify-content-around justify-content-md-start">

            <div>
                    
                <button class="btn btn-lg btn-validate me-3">{{ button_label|default('Envoyer') }}</button>
            
                <a href="{{path('show_presentation', {'stringId':stringId})}}">
            
                    <button type="button" class="btn btn-lg btn-go-back">Annuler</button>
                </a>
                
            </div>


        </div>

        
        {{ form_end(form) }}
        
    </div>

{% endblock %}
