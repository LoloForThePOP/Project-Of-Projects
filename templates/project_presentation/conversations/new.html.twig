{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/app_forms.css" />{% endblock %}

{% block title %}Envoyer un Message{% endblock %}

{% block body %}


    <style>

        ::placeholder {
            font-size:1.10em !important;
            font-weight:bold;
            color: #66666d  !important;
        }

        textarea::placeholder {
            font-size:1.15em !important;
            font-weight:bold;
            color: #66666d !important;
        }
        
    </style>

    <div class="container col-sm-4 pt-3">
        
        <h3 class="my-4 font-weight-bold">Envoyer un message priv√©</h3>
            
        {{ form_start(form) }}

        <div class="mb-4">{{ form_widget(form.content) }}</div>

        <!-- Actions Buttons -->

        <div class="pt-1">

            <button class="btn btn-lg btn-success me-2">{{ button_label|default('Envoyer') }}</button>
        
            <a href="{{path('show_presentation', {'stringId':stringId})}}">
        
                <button type="button" class="btn btn-lg btn-info">Annuler</button>
            </a>

        </div>

        
        {{ form_end(form) }}
        
    </div>

{% endblock %}
