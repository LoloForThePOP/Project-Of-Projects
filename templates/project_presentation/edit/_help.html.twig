{% embed "utilities/modal_skeleton.html.twig" with {'modal_id': "pp-edit-help", 'modal_title': "Aide", 'modal_size': "modal-lg"} %}


    {% macro helpRow(image_src, image_alt, text) %}

        <div class="row g-4">

            <div class="col-6 ps-0">

            <div class="image-container">

                <img src="{{image_src}}" alt="{{image_alt}}">

            </div>

            </div>

            <div class="col-6 pe-0">

                <div class="text-container">

                    {{text}}

                </div>
                
            </div>

        </div>
        
    {% endmacro %}



    {% block modalBody %}

    <div class="help-content container">

        {# Switch between edition and consultation mode #}
        
        {{ _self.helpRow(
            asset('drag_and_drop.png', 'tutorial'),
            "Représentation d'un basculement entre le mode d'édition, et le mode de consultation.",
            "Pour voir le résultat, cliquer sur l'icône oeil. Pour modifier la page, cliquer sur l'icône crayon.", 
        ) }}

        {# Reorder items #}
        
        {{ _self.helpRow(
            asset('drag_and_drop.png', 'tutorial'),
            "Représentation d'un glisser-déposer d'élément (= drag and drop)",
            "Pour changer l'ordre des éléments, restez appuyer sur un élément puis déplacez-le à l'endroit désiré.", 
        ) }}

        {# Delete item #}
        
        {{ _self.helpRow(
            asset('drag_and_drop.png', 'tutorial'),
            "Représentation d'une poubelle",
            "Pour supprimer des éléments, cliquer sur cette icône et sélectionner les éléments désirés", 
        ) }}

        {# Add item #}
        
        {{ _self.helpRow(
            asset('drag_and_drop.png', 'tutorial'),
            "Représentation d'un click sur un élément",
            "Pour modifier un élément, cliquer dessus.", 
        ) }}

    </div>

    {% endblock %}

{% endembed %}

<style>

    .help-content{
        margin-bottom: 21px;
    }

    .help-content .image-container{

        display:flex;
        justify-content: center;
        align-items: center;

        height:100%;

        padding: 15px;

        background-color: #f8f9fa;

        border-radius: 8px;
        
    }

    .help-content .image-container img{

        max-width: 100%; 
        height: auto;
    }

    .help-content .text-container{

        display:flex;
        justify-content: center;
        align-items: center;

        text-align: center;

        height:100%;

        padding: 15px 20px;

        font-size: 1.18em;
        font-weight: bold;

        background-color: rgb(233, 255, 227);


    }


</style>
