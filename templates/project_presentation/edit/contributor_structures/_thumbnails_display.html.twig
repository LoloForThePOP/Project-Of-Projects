
{% if cs.persorgs | length > 0 %}

    <div class="container">

        <!-- Persorg Grid -->

        <div id="elements-list" data-elements-type="persorgs" data-id-cs={{cs.id}} class="row">

            {% for persorg in cs.persorgs %}

                <!-- Persorg Card --> 

                <div id="{{persorg.id}}" class="js-sortable-element persorgCard position-relative d-flex align-items-center justify-content-center" style="height:180px; width:150px; margin-right: 15px; margin-bottom: 20px; cursor:pointer; border:1px solid black; border-radius: 4px;">

                    <!-- Persorg Edition Path -->

                    <a class='text-decoration-none text-body' href="{{path('edit_persorg', {'stringId': stringId, 'id_persorg': persorg.id})}}">

                        <!-- Persorg Card Content --> 

                        {% include "persorgs/_card.html.twig" %}
                    
                    </a>

                    <!-- Remove Persorg (Button with Red Cross) -->

                    <button type="button" class="js-delete-element d-inline position-absolute btn btn-danger sharp py-0 px-2" data-id="{{persorg.id}}" style="top:0; right:0; z-index:1000;"><span class="fw-bold">x</span></button>

                </div>

            {% endfor %}
        
        </div>

    </div> 

{% endif %}