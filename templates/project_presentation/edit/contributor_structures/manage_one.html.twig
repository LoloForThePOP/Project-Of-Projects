{% embed "project_presentation/edit/manage_component_skeleton.html.twig" %}

{% set ecsTitle = cs.title[:1] | upper ~ cs.title[1:] %}

{% block title %}{{ecsTitle}}{% endblock %}

{% block mainContentTitle %}{{ecsTitle}}{% endblock %}


{% block moreInfoButtonLabel %}Info{% endblock %}

{% block moreInfoContent %}
    
    <p class="h5">Les vignettes permettent d'ajouter des photos ou des logos.</p>

    <p class="h5">Le texte permet de pr√©senter rapidement les personnes et les organisations que vous souhaitez remercier.</p>

{% endblock %}


{% block mainContent %}

    <!-- Add Items Buttons-->

    <div class="mt-md-4 mb-4"> 
        
        <!-- Add a persorg button (triggers a modal with a form) -->

        <button type="button" data-bs-toggle="modal" data-bs-target="#add-persorg-modal" class="btn btn-success mb-4 me-3">Ajouter une vignette</button>
            
        {% if cs.richTextContent is empty %}

            <!-- Button Display Text Area -->

            <button type="button" class="js-display-textarea btn btn-success me-3 mb-4"> <span class="">+</span> Texte libre</button>

        {% endif %}

    </div>

    <!-- Add a Persorg Form (displayed in a modal box) -->

    {% include "persorgs/_add_form_modal.html.twig" %}

{# Thumbnails display #}

    <div class="col-lg-10 mb-4">

        {% include "project_presentation/edit/contributor_structures/_thumbnails_display.html.twig" %}
        
    </div>

{# Textarea display #}

    {% include "project_presentation/edit/contributor_structures/_edit_with_textarea.html.twig" %}

{% endblock %}

{% block specificButtons %}

    {# update ECS Title Button #}

    <a class="text-decoration-none" href="{{ path('update_ecs_title', {'stringId': stringId, 'id_ecs': cs.id}) }}">
        <button type="button" class="btn btn-lg text-body mb-4" style="background-color:#c5d7e6; color:white;">Modifier le titre</button>
    </a>

{% endblock %}

   
{% block seeResultAnchor %}cs-{{cs.id}}{% endblock %}



{% endembed %}
