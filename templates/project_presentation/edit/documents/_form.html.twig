
       

    <!-- Add a Document Form (displayed in a modal box) -->

    <div class="modal" id="AddDocumentFormModal" tabindex="-1" role="dialog" aria-labelledby="documentModalLabel" aria-hidden="true">

        <div class="modal-dialog" role="document">

            <div class="modal-content">

                <div class="modal-header">

                    <h5 class="modal-title" id="documentModalLabel">Ajouter un document</h5>

                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>

                <div class="modal-body">

                    {{ form_start(form) }}

                    <div class="mt-3 mb-5 px-3">

                        {{ form_row(form.file) }}

                    </div>

                    <div class="mb-5 px-3">

                        {{ form_row(form.title) }}

                    </div>

                    

                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-lg btn-info sharp font-weight-bold" data-bs-dismiss="modal">Retour</button>         

                    <button class="btn btn-lg btn-success sharp bg-green font-weight-bold">Valider</button>
                    
                </div>

                {{ form_end(form) }}

            </div>

        </div>

    </div>



</script>

