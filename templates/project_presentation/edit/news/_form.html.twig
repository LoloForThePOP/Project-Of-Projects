<div class="news-form-container">

    {{ form_start(form) }}

        <div class="textarea-container">

            {{form_widget(form.textContent)}}
        
        </div>


        <div class="images-icons-container">

            <div class="upload-image-news" data-image-position="1"><img id="" src="{{ asset('image.svg', 'misc')}}" alt="Image Icon"></div>
            <div class="upload-image-news" data-image-position="2"><img id="" src="{{ asset('image.svg', 'misc')}}" alt="Image Icon"></div>
            <div class="upload-image-news" data-image-position="3"><img id="" src="{{ asset('image.svg', 'misc')}}" alt="Image Icon"></div>
        
        </div>

        <div class="d-none">

            {{form_row(form.image1File)}}
            {{form_row(form.captionImage1)}}

            {{form_row(form.image2File)}}
            {{form_row(form.captionImage2)}}

            {{form_row(form.image3File)}}
            {{form_row(form.captionImage3)}}    
        
        </div>

        <button type="submit" class="btn btn-validate btn-lg"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16"><path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z"/></svg></button>

    {{ form_end(form) }}


</div>


<script>


    $(document).ready(function(){

        $('.upload-image-news').on('click', function (){

            var imagePosition = $(this).data("image-position");

            $("#news_image"+imagePosition+"File_file").click();

        });


    });


   





</script>


<style>

.news-form-container .textarea-container{

    display: inline-block;
    width: 90%;

    
}

.news-form-container .images-icons-container{

    display: inline-block;
    
}


</style>