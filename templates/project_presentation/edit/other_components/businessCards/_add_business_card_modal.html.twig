{% embed "utilities/modal_skeleton.html.twig" with {'modal_id': "add_business_card_form_modal", 'modal_title': "üñêÔ∏è Comment vous contacter ?", 'modal_size' : "modal-lg"} %}
        
    {% block modalBody %}


        {{ form_start(form) }}

        {% include "project_presentation/edit/other_components/businessCards/_form.html.twig" %}

        <style>

            @media screen and (max-width: 580px) {

                .modal-body{
                    padding: 10px 9px;
                }

                form[name="business_card"] .contact-icon {
    
                    margin-right: 5px;
                    margin-bottom: 6px;
    
                }

                form[name="business_card"] label {
    
                    display: inline;
                    font-size: 17px !important;
                    font-weight: normal !important;
    
                }
    
            }
    
        </style>

    {% endblock %}

    {% block footerButtons %}

        <button type="submit" class="btn btn-validate">‚úîÔ∏èValider</button>

        {{ form_end(form) }}

    {% endblock %}


    {% block formErrors %}
        
        {% if not form.vars.valid %}

            <script>
            
                $(document).ready(function(){
            
                    $('#{{modal_id}}').modal('show');
            
                });
            
            </script>

        {% endif %}
    
    {% endblock %}

{% endembed %}