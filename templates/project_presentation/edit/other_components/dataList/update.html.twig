{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/app_forms.css" />{% endblock %}

{% block title %}Modifier une donnée{% endblock %}

{% block sidebar %}{% include '_partials/sidebar.html.twig' %}{% endblock %}


{% block body %}
    
    <!-- Content Container -->

    <div class="container">

        <!-- Title Container -->

        <div class="mt-3 mt-md-5 mb-2">

            <!-- ui Page Title -->

            <h3 class="font-weight-bold d-inline mr-3">Modifier une donnée</h3>
     
        </div>


        <!-- Form Display -->

        <div class="col-md-5 mt-4 mb-5 pl-0">


            {{ form_start(form) }}


            <div class="mt-3 mb-3 px-3">

                {{ form_row(form.name) }}

            </div>

            <div class="mb-3 px-3">

                {{ form_row(form.value) }}

            </div>


        </div>


        <!-- Action Buttons -->

        <div>

            <button class="btn btn-success btn-lg sharp bg-green font-weight-bold mr-2">Valider</button>

            <a href="{{ path('manage_other_components', {'stringId': stringId, 'component_type': 'dataList'}) }}">

                <button type="button" class="btn btn-info btn-lg sharp">Retour</button>

            </a>

        </div>

        {{ form_end(form) }}

    </div>


{% endblock %}



{% block javascripts %}

{% endblock %}
