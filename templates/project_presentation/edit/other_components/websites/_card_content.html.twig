
<div class="container pe-0">

    <div class="row w-100 pe-0 me-0">
        
        {# First Column displays website Logo (exemple : Youtube; Facebook Logo... or a Default One letter Logo #}
            
        <div class="col-2 d-flex align-items-center justify-content-center">

            <div class="">
                                    
                {% if website.icon is defined and website.icon is not null %}
                    
                    <img src="{{ asset(website.icon ~'.png', 'popular_website_logo')}}" alt="{{website.icon}}~ logo" width="40">

                {% else %}

                    <div id="" class="" style="display: flex; align-items: center; justify-content: center; background-color: rgb(225, 234, 255); text-transform: uppercase; width: 40px; height: 40px; font-size: 18px; font-weight: bold;">n</div>

                {% endif %}

            </div>
            
        </div>

        {# second Column displays website url and website description if it exists #}

        <div class="col-10 mx-0 d-flex align-items-center">

            <div>
                    
                {# website title #}

                {% if website.description is not null %}

                    <h5 class="websiteDescription mb-1">
                        
                        {{website.description | first | capitalize ~ website.description | slice(1,50) }}

                        {% if website.description | length > 50 %}
                        ...
                        {% endif %}

                    </h5>

                {% endif %}

                {# website url #}

                <p class="websiteUrl mb-1">

                    {{website.url | slice(0,50)}}

                    {% if website.url | length > 50 %}
                    (...)
                    {% endif %}
                
                </p>

            </div>

        </div>

    </div>

</div>