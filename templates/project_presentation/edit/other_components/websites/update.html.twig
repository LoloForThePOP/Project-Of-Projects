{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/app_forms.css" />{% endblock %}

{% block title %}Sites Web du Projet{% endblock %}

{% block sidebar %}{% include '_partials/sidebar.html.twig' %}{% endblock %}


{% block body %}
    
    <!-- Content Container -->

    <div class="container">

        <!-- Title Container -->

        <div class="mt-3 mt-md-5 mb-2">

            <!-- ui Page Title -->

            <h3 class="font-weight-bold d-inline mr-3">Modifier un site web</h3>
     
        </div>


        <!-- Form Display -->

        <div class="col-md-5 mt-4 mb-5 ps-0">

            {{ form_start(form) }}

            {{ form_widget(form) }}


        </div>


        <!-- Action Buttons -->

        <div>

            <button class="btn btn-success btn-lg sharp me-2">Valider</button>

            <a href="{{path("manage_other_components", {'stringId': stringId, 'component_type': 'websites'})}}">

                <button type="button" class="btn btn-info btn-lg sharp font-weight-bold" data-dismiss="modal">Annuler</button>

            </a>

            

        </div>

        {{ form_end(form) }}

    </div>


{% endblock %}