
{% embed "utilities/modal_skeleton.html.twig" with {'modal_id': "addImageSlideFormModal", 'modal_title': "Ajouter une Image ou un sch√©ma"} %}

    {% block modalBody %}

        {{form_start(addImageForm)}}

        <div class="form-group mt-3 mb-3 pl-md-2">

            <div class="font-weight-bold">

                <!--Browse Image File -->
            
                <span class=""> 
                    {{ form_label(addImageForm.file) }}
                </span>

                <div class="p-0 m-0 alert text-body h5 fw-bold">

                    {{ form_errors(addImageForm.file) }}

                </div>
                
                <div class="mt-1 p-1 disabled rounded">
                    
                    {{ form_widget(addImageForm.file) }}

                </div>
                
                <!-- Add a Caption? -->
                
                <div class="mt-3">

                    {{ form_label(addImageForm.caption) }}

                    {{ form_widget(addImageForm.caption) }}
                    
                </div>

            </div>

        </div>

    {% endblock %}

    {% block footerButtons %}

        <button type="submit" class="btn btn-success">Valider</button>

        {{ form_end(addImageForm) }}

    {% endblock %}


    {% block formErrors %}
        
        {% if not addImageForm.vars.valid %}

            <script>
            
                $(document).ready(function(){
            
                    $('#{{modal_id}}').modal('show');
            
                });
            
            </script>

        {% endif %}
    
    {% endblock %}

{% endembed %}
