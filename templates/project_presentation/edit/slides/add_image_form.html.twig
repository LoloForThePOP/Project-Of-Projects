
<div class="modal" id="addImageSlideFormModal" tabindex="-1" role="dialog" aria-labelledby="addImageFormModal" aria-hidden="true">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">

                <h5 class="modal-title font-weight-bold" id="addImageFormModal">Ajouter une Image ou un schéma</h5>

                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

            <div class="modal-body">

                            
                {{form_start(addImageForm)}}

                <div class="form-group mt-3 mb-3 pl-md-2">

                    <div class="font-weight-bold">

                        <!--Browse Image File -->
                    
                        <span class="font-weight-bold h5"> 
                            Choisir une image
                        </span>

                        <!-- <span class="arrowCar">▼ </span> -->

                        <div class="p-0 m-0 alert text-body h5 font-weight-bold">

                            {{ form_errors(addImageForm.file) }}

                        </div>
                        
                        <div class="mt-1 p-1 bg-warning disabled rounded">
                            
                            {{ form_widget(addImageForm.file) }}

                        </div>
                        
                        <!-- Add a Caption? -->
                        
                        <div class="mt-3">

                            {{ form_label(addImageForm.caption) }}

                            {{ form_widget(addImageForm.caption) }}
                            
                        </div>


                    </div>

                </div>

            </div>

            <!-- Footer : Action Buttons -->

            <div class="modal-footer">

                <button type="button" class="btn btn-info" data-bs-dismiss="modal">Retour</button>         

                <button type="submit" class="btn btn-success">Valider</button>
                
            </div>

            {{ form_end(addImageForm) }}

        </div>

    </div>

</div>