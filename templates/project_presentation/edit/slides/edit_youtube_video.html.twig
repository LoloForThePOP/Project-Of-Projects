{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}

<link rel="stylesheet" href="/css/app_forms.css" />{% endblock %}

{% block title %}

    {% if context == 'new' %}

        Ajouter

    {% else %}

        Modifier

    {% endif %}
    
        une vidéo youtube
    
    {% endblock %}

{% block sidebar %} {% include '_partials/sidebar.html.twig' %}{% endblock %}

{% block body %}

<div class="container px-0 px-md-4">

    <!-- Title with Info Button Container -->

    <div class="mt-4 mt-md-5 mb-md-3">

        <!-- ui Page Title -->

        <h3 class="fw-bold d-inline-block me-2 mb-3">

            {% if context == 'new' %}

                Ajouter

            {% else %}
                
                Modifier
            
            {% endif %}

            une vidéo Youtube
            
        </h3>

        <!-- Button with Collapsable Advice : How to Insert a Youtube Vidéo ? -->

        <a class="fw-bold d-inline-block mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTutorial"
            aria-expanded="false" aria-controls="collapseTutorial">

            <span class="btn btn-warning fw-bold btn-lg fs-15 h5 p-1 px-3" style="letter-spacing: 2px;">Comment faire ?</span>

        </a>

    </div>

    <!-- Collapsible Info Container -->

    <div id="collapseTutorial" class="collapse no-transition col-md-7 px-4 py-3 mb-4"
        style="background-color: lavender;">

        <h5 class="fw-bold mb-3">Sur la page Youtube de la vidéo désirée, recopier son code (zone encadrée en rouge dans l'exemple ci-dessous).</h5>

        <p class="h5 fw-bold mb-3">https://www.youtube.com/watch?v=<span
                class="px-1 border border-2 border-danger rounded">xxxxxxxxxx</span></p>

        <p class="h5 fw-bold">!!! Youtube peut désactiver l'affichage des vidéos avec copyright (par exemple certains clips musicaux).</p>

    </div>

    <!-- Form Container -->

    <div class="mt-3">

        {{form_start(form)}}

        <!-- Youtube Video Code Input-->

        <div class="form-group col-md-7 ps-0 mb-4">

            {{form_row(form.address)}}

        </div>

        <!-- Youtube Video Caption Input-->

        <div class="col-md-7 ps-0">

            {{ form_row(form.caption) }}

        </div>

    </div>

    <!-- Action Buttons -->

    <div class="mt-4">

         <div class="pt-2 ps-0">

            <button type="submit" class="btn btn-success bg-green sharp btn-lg h3 mb-4 me-1">Valider</button>

            <a class="text-decoration-none text-white" href="{{ path('manage_slides', {'stringId': stringId}) }}">
                <button type="button" class="btn btn-info btn-lg mb-4">Retour Images & vidéos</button>
            </a>

        </div>

        {{form_end(form)}}

    </div>

</div>


{% endblock %}