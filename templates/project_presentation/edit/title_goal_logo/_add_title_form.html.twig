{% embed "utilities/modal_skeleton.html.twig" with {'modal_id': "add_title_form_modal", 'modal_title': "Titre du Projet"} %}
    
{% block modalBody %}

        {{ form_start(form) }}

        <div class="mb-3">

            <div class="mb-3">
                {{ form_errors(form.title) }}
            </div>
            
            {{ form_widget(form.title) }}

        </div>

        <div class="d-none">

            {{ form_rest(form) }}

        </div>

    {% endblock %}

    {% block footerButtons %}

        <button type="submit" class="btn btn-success">Valider</button>

        {{ form_end(form) }}

    {% endblock %}


    {% block formErrors %}
        
        {% if not form.vars.valid %}

            <script>
            
                $(document).ready(function(){
            
                    $('#{{modal_id}}').modal('show');
            
                });
            
            </script>

        {% endif %}
    
    {% endblock %}

{% endembed %}