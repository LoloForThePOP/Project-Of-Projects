{% embed "project_presentation/edit/update_element_skeleton.html.twig" %}

    {% block mainContentTitle %}Modifier l'adresse d'une page de projet{% endblock %}

    {% block collapsibleMoreInfo %}{% endblock %}

    {% block mainContent %}


    {# Notification Display Current Address #}

    <div class="notification alert alert-success alert-dismissible h5 fw-bold fade show fw-bold pb-4 mb-3">


        <p class="mb-4">

            L'adresse actuelle de votre page de projet est :

        </p>

        <p class="text-center text-body lh-lg mb-0">

            {{ url ('homepage') }}<span class="border border-3 border-danger px-1 me-1 rounded">{{presentation.stringId}}</span><span class="">/</span>

        </p>
             
    </div>      

    
    {# Notification Warning Old Adress Broken Links #}
    
    <div class="notification alert alert-warning fw-bold pb-1 mb-3" role="alert">

        <p>
            
            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-exclamation-triangle-fill text-danger me-2" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            
            </svg>
            
            <span class="h5 fw-bold align-bottom">
                Si vous modifiez cette adresse, l'ancienne adresse ne sera plus accessible.
            </span>

        </p>

    </div>



    {# Notification Display Slug Advices #}

    <div class="alert alert-success h5 fw-bold mb-4">

        <p class="mb-3">Pour modifier l'adresse :</p>

        <ul>
            <li class="mb-2">Ne pas utiliser d'espaces (utiliser des tirets - à la place)</li>
            <li class="mb-2">Ne pas utiliser d'accents (é; à; è; ê)</li>
            <li class="mb-2">Ne pas utiliser de majuscules et d'apostrophes '</li>
        </ul>
    
    </div>


    {# Display Form with a form title #}

    <div class="alert alert-secondary">

        <div class="lh-lg h5 fw-bold mb-4">Remplacer <span class="border border-3 border-danger px-1 me-1 rounded">{{presentation.stringId}}</span> par :</div>

        <div class="mb-3">

            {{ form_errors(form.stringId) }}
    
        </div>
    
        <div class="mb-4">
            
            {{ form_widget(form.stringId) }}
    
        </div>

    </div>

    

    
    {% endblock %}

{% endembed %}
  
  