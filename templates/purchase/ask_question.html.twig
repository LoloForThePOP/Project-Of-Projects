{% extends 'base.html.twig' %}


{% block title %}Entrer en contact{% endblock %}

{% block body %}

<div class="page-container container px-2 px-md-4">

    <div class="row">

        <div class="mx-auto col-md-9 col-lg-7">

          <div class="py-3 px-md-3 mb-4">

            <div class="fs-4 fw-bold mb-2">Pour toute commande ou information</div> 

            <div class="fs-4 fw-bold mb-4">Notre équipe est à votre écoute et vous recontacte :</div>

            {{form_start(buyerInfoForm)}}
            {{form_widget(buyerInfoForm)}}
            {{form_end(buyerInfoForm)}}

            <div class="mt-4 pt-2">

              <button type="submit" class="btn btn-validate sharp fw-bold me-3 mb-5">Valider</button>
  
              <a href="{{ path ('homepage') }}">
                
                <button type="button" class="btn btn-go-back sharp fw-bold mb-5">Retour</button>
  
              </a>
  
            </div>




            <!-- Contact Us -->
                        
            <div class="contact-caps">
                            
                <div class="row">

                  <h4 class="fw-bold mb-3">Vous pouvez aussi</h4>
                  <h4 class="fw-bold mb-4">Poser une question écrite :</h4>

                  {{form_start(contactWebsiteForm)}}
                  {{form_widget(contactWebsiteForm)}}
                  {{form_end(contactWebsiteForm)}}

                  <div class="mt-4 pt-2">

                    <button type="submit" class="btn btn-validate sharp fw-bold me-3 mb-3">Valider</button>
        
                  </div>

                  <div class="fs-4 fw-bold mb-3">Ou appeler notre accueil :</div>
                  
                  <div class="fs-5">
                    Téléphone : <a href="tel:{{contactUsPhone}}">{{contactUsPhone}}</a> (appel non surtaxé)
                  </div>
                  

                  
                  
                  
                
               

       


                </div>

            </div>















          </div>

        </div>

    </div>

    
  

</div>

