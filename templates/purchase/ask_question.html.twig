{% extends 'base.html.twig' %}


{% block title %}Entrer en contact{% endblock %}

{% block body %}

<div class="page-container container px-2 px-md-4">

    <div class="row">

        <div class="mx-auto col-md-9 col-lg-7">

          <div class="py-md-3 px-md-3 mb-4">

            <div class="text-success fs-4 fw-bold mb-4">

              {% if offer == 'review' %}

                Offre Relecture Totale et Bilan Conseils - 39 €

              {% elseif offer == 'create_presentation' %}

                Offre Construction Totale Illustrée - 139 €
                
              {% endif %}

            </div>

            <div class="row mb-4 pb-2">

              <div class="col-5 col-md-3 d-flex align-items-center justify-content-center">

                <img class="img-fluid" width="95" src="{{asset('plans/'~ offer ~'.png', 'larger')}}" alt="choosen plan symbol" >

              </div>

              <div class="col-7 col-md-9 d-flex align-items-center">

                <div class="fs-5 fw-bold mb-2">Pour toute commande ou demande sans engagement, nous vous recontactons.</div>

              </div>

            </div>

            {{form_start(buyerInfoForm)}}
            {{form_widget(buyerInfoForm)}}
            

            <div class="mt-4 pt-2">

              <button type="submit" class="btn btn-validate sharp fw-bold me-3 mb-5">Envoyer</button>
  
              <a href="{{ path ('homepage') }}">
                
                <button type="button" class="btn btn-go-back sharp fw-bold mb-5">Retour</button>
  
              </a>
  
            </div>

            {{form_end(buyerInfoForm)}}




            <!-- Contact Us -->
                        
            <div class="contact-caps">
                       
                <div class="row">
                  
                  <h4 class="text-success fw-bold mb-3">Vous pouvez aussi</h4>


                  <div class="text-primary fs-4 fw-bold mb-3">Appeler notre accueil</div>
                  
                  <div class="fs-5">
                    Téléphone : <a href="tel:{{contactUsPhone}}">{{contactUsPhone}}</a> (appel non surtaxé)
                  </div>
                  

                  
                  
                  
                
               

       


                </div>

            </div>















          </div>

        </div>

    </div>

    
  

</div>

<style>

</style>

{% endblock %}