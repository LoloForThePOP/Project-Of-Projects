{# Template for register to the app via an email address #}

{% extends 'base.html.twig' %}


{% block title %}Cr√©er un compte Propon{% endblock %}

{% block body %}

    {# Hide / show password functionnality for input[type="password"] #}

    {% include "utilities/_toggle_password_visibility.html.twig" %}


    {# Overall container #}

    <div class="page-container container px-2 col-md-8 col-xxl-8">

        <div class="row align-items-center text-center text-lg-start">

            {# Overall title #}

            <h3 class="text-success fw-bold text-center">Cr√©er un compte Propon gratuit</h3>

            {# Form container #}

            <div class="col-lg-6 text-success pt-3">

                {{form_start(registrationForm)}}

                {# Email field #}

                <div class="my-5  mt-lg-3 mb-lg-3">
                    <span class="fs-4 text-success me-2">@</span> {{ form_label(registrationForm.email) }}
                    {{form_errors(registrationForm.email)}}
                    {{ form_widget(registrationForm.email) }}
                </div>

                {# Password field #}

                <div class="my-5 mb-lg-3">
                    <span class="me-2">üîë</span> {{ form_label(registrationForm.plainPassword) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                    {{ form_widget(registrationForm.plainPassword) }}
                </div>

                {# Agree terms info #}

                <p class="text-body">En cliquant sur valider, vous acceptez nos <a href="{{path ('static', {'page_name': "terms",})}}"target="_blank" rel="noopener noreferrer">conditions g√©n√©rales d'utilisation</a>.</p>
               

                <!-- ui Actions Buttons -->

                <div class="mt-5 d-flex justify-content-evenly">

                    <button type="submit" value="" class="btn btn-validate me-3 mb-2">
                        <span class="h5 fw-bold">‚úîÔ∏è Valider</span>
                    </button>

                    <a href="{{path('homepage')}}">
                        <button type="button" value="" class="btn btn-go-back mb-2">
                            <span class="h5 fw-bold">‚ùå Retour</span>
                        </button>
                    </a>

                </div>

                {{form_end(registrationForm)}}

            </div>

            {# Illustration image (only >= md screens) #}

            <div class="d-none d-lg-block col-12 col-md-8 col-lg-6 ps-lg-5">

                <img src="{{asset('account/register.png', 'larger')}}" class="rounded d-block mx-lg-auto img-fluid" alt="Two men, one is showing an entry door." loading="lazy" width="700" height="500">

            </div>

        </div>

    </div>


{% endblock %}