{% extends 'base.html.twig' %}

{% block title %} Modification du mot de passe{% endblock %}

{% block body %}

    <div class="container">

        <h3 class="my-2 my-md-5 fw-bold">Modification du mot de passe</h3>

        <div class="row mb-5">

            <div class="col-md-8">
                        
                {{ form_start(form) }}

                {{ form_widget(form) }}

                <!-- Action Buttons -->

                <div class="mt-5">

                    <button type="submit" class="btn btn-validate me-3">Enregistrer</button>

                    <a href="{{ path('show_user_profile', {'userNameSlug': app.user.userNameSlug}) }}">
                        <button type="button" class="btn btn-go-back">Retour</button>
                    </a>
                    
                </div>

                {{ form_end(form) }}

            </div>


        </div>
        
    </div>
    
{% endblock %}