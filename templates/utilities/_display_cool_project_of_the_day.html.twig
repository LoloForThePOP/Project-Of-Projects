
<style>

    .cool-project-container {
        position: relative;
        width: 800px;
        margin: auto;
        background-color: #ff973b0d;
        padding-bottom: 25px;
        margin-top: 100px;
        margin-bottom: 90px;
        border-radius: 2px;
        border: 3px dashed #81b989;
    }

    .cool-project-container .container-container{
        
        padding-top: 56px;
    }

    .cool-project-container .container-title {
        display: inline-block;
        position: absolute;
        top: -17px;
        left: -30px;
        transform: skewY(-5deg);
        padding: 5px 16px;
        font-size: 25px;
        font-weight: bold;
        background-color: #fff;
        border: 2px dashed #fdab8d;
        border-radius: 2px;
    }

    .cool-project-container .project-title {
        margin-bottom: 13px;
        font-size: 30px;
        font-weight: bold;
        text-align: center;
        color: #457641
    }

    .cool-project-container .short-editorial {
        position: relative;
        font-size: 17px;
        margin-left: 40px;
        margin-right: 30px;
        padding-bottom: 40px;
    }

    .discover-project-button {
        position: absolute;
        bottom: 14px;
        right: 25px;
        border: 2px solid #9797ff;
        border-radius: 0;
        padding: 6px 6px;
        line-height: 1;
    }

    .discover-project-button svg {
        width: 13px;
    }

    .cool-project-container .thumbnail {
        margin-left: -40px;
        max-width: 100%;
        height: auto;
        border-radius: 12px;
    }

    .cool-project-container .cta {
        text-align: center;
        
    }

    .cool-project-container .cta a{
        color: #1a3318;
        
    }

    .cta1 span:first-of-type{
        font-weight: bold;
    }

    .cta2 span:first-of-type{
        font-weight: bold;
    }

    .cool-project-container .logo {
        position: absolute;
        top: -49px;
        right: -68px;
        max-width: 135px;
        max-height: 135px;
        z-index: 3;
        border-radius: 6px;
    }

    @media screen and (max-width: 580px) {


        .cool-project-container {
            width: 100%;
            margin-top: 66px;
	        margin-bottom: 38px;
        }

        .cool-project-container .container-container {
            padding-top: 42px;
        }

        .cool-project-container .container-title {

            left: -22px;
            padding: 3px 12px;
            font-size: 19px;
        }

        .cool-project-container .logo {
            top: -30px;
            right: -10px;
            max-width: 90px;
            max-height: 90px;
        }

        .cool-project-container .short-editorial {

            font-size: 16px;
            margin-left: 8px;
            margin-right: 7px;
            padding-bottom: 16px;
            text-align: center;

        }

        .cool-project-container .project-title {
            margin-bottom: 6px;
            font-size: 23px;
        }

        .cool-project-container .img-container {
            display: flex;
            justify-content: center;
            margin-bottom: 15px;
        }

        .cool-project-container .thumbnail {
            margin: 0;
            max-width: 96%;
            max-height: 200px;
            border-radius: 3px;
        }

        .discover-project-button{
            display: none;
        }


        .cool-project-container .cta {
            font-size: 14px;
            
        }

        .cta1 span:first-of-type{
            color: #8a8afd;
        }
    
        .cta2 span:first-of-type{
            color: #8a8afd;
        }



    }


</style>


{% if results is not empty %}

    {% set projectOfTheDay = results | first %}

        <div class="cool-project-container">

            <div class="container-title">Projet Cool du Jour</div>

            <img id="" class="logo" src="{{ vich_uploader_asset(projectOfTheDay, 'logoFile') | imagine_filter('logo')}}" alt="Logo du Projet du jour" width="200">

            <div class="container-container px-0">

                <div class="row">

                    <div class="col-12 col-md-8">
                    
                        <a href="{{ path('show_presentation', {'stringId': projectOfTheDay.stringId}) }}"><div class="project-title">{{projectOfTheDay.title}}</div></a>

                        <div class="short-editorial">                 
                        
                            <div class="d-none d-md-block">{{projectOfTheDay.getDataItem('short_editorial_text_fr') ? projectOfTheDay.getDataItem('short_editorial_text_fr') | raw :  projectOfTheDay.goal }}</div>

                            <a href="{{ path('show_presentation', {'stringId': projectOfTheDay.stringId}) }}" class="text-body"><div class="d-md-none">{{ projectOfTheDay.goal }}</div></a>

                            <a href="{{ path('show_presentation', {'stringId': projectOfTheDay.stringId}) }}"><button class="discover-project-button btn">Découvrir

                                <svg class="w-4 h-4 ml-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                  </svg>
                            </button></a>

                        </div>
                
                    </div>
                    

                    <div class="col-12 col-md-4 ps-md-0 img-container">

                        <img class="thumbnail" src="{{ projectOfTheDay.cache.thumbnailAddress }}" alt="Cool Project of the Day Thumbnail">

                    </div> 


                </div>

            </div>

            <div class="cta">

                <div class="cta1"><span class="">Vous connaissez aussi un projet cool ? </span><br class="d-md-none"><span class=""><a href="{{path('contact_website')}}">Partagez-le, contactez-nous.</a></span></div>

                <div class="cta2"><span class="">Votre propre projet ici ? </span><span class=""><br class="d-md-none"><a href="{{path('contact_website')}}">Contactez-nous (service gratuit)</a></span>. </div>

            </div>


        </div>
    
{% endif %}


