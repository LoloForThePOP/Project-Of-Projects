
<button class="toggle-password-visibility-button">

	<svg viewBox="0 0 24 24" style="
			fill: none;
			height: 24px;
			stroke: rgba(0, 0, 0, 0.4);
			stroke-linecap: round;
			stroke-linejoin: round;
			stroke-width: 1;
			width: 24px;
		">
		<path d="M23.5,12c0,0-5.148,6.5-11.5,6.5S0.5,12,0.5,12S5.648,5.5,12,5.5S23.5,12,23.5,12z M12,8c2.209,0,4,1.791,4,4 s-1.791,4-4,4s-4-1.791-4-4S9.791,8,12,8z M12,10c1.105,0,2,0.895,2,2s-0.895,2-2,2s-2-0.895-2-2"></path>
	</svg>
	
</button>

<script>

    $(document).ready(function() {

        $( "input[type=password]" ).addClass("password-field");

        $( "input[type=password]" ).wrap( "<div class='toggle-password-visibility-wrapper'></div>" );

        $( ".toggle-password-visibility-wrapper" ).append( $( ".toggle-password-visibility-button") );

        $(".toggle-password-visibility-button").click(function() {

                event.preventDefault();

                var input = $(this).siblings(".password-field");

                if (input.attr("type") == "password") {
                    input.attr("type", "text");
                } else {
                    input.attr("type", "password");
                }
        
        });

    });

</script>

<style>

    .toggle-password-visibility-wrapper {
        display: flex;
        align-items: center;
        border: 1px solid #cbd5e0;
    }

    input:not(.password-field){
        border: 1px solid #cbd5e0 !important;
        border-radius: 0 !important;
    }

    .password-field{
        border: none;
        display: inline;
    }

    .toggle-password-visibility-button {
        background-color: transparent;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
    }

</style>