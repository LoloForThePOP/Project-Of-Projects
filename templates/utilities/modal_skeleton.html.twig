
{#
    Skeleton for Bootstrap 5 Modal Box

    Twig parameter(s) : modal_id, modal_title

    Blocks : modalBody, footerButtons
    
#}

<div class="modal" id="{{modal_id}}" tabindex="-1" aria-labelledby="" aria-hidden="true">
        
    <div class="modal-dialog {{modal_size ?? ""}}">

        <div class="modal-content">

            <div class="modal-header">

                <h5 class="modal-title" id="">{{modal_title}}</h5>

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>

            <div class="modal-body">

                {% block modalBody %}{% endblock %}

            </div>

            <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Retour</button>

                {% block footerButtons %}{% endblock %}

            </div>

        </div>

    </div>

</div>
  