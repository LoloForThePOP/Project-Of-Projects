
{#
    Skeleton for Bootstrap 5 Modal Box

    Blocks : modalBody, footerButtons
    
    Parameter(s) : modal_id, modal_title, modal_size

    class disabled is added to inactive sortable behaviour.
    
#}

<div class="modal disabled" id="{{modal_id}}" tabindex="-1" aria-labelledby="" aria-hidden="true">
        
    <div class="modal-dialog {{modal_size ?? ""}}">

        <div class="modal-content">

            {% block modalHeader %}

                <div class="modal-header">

                    <h5 class="modal-title fw-bold" id="">{{modal_title}}</h5>

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

                </div>

            {% endblock %}

            <div class="modal-body">

                {% block modalBody %}{% endblock %}

            </div>

            {% block modalFooter %}

                <div class="modal-footer">
                    
                    <button type="button" class="btn btn-go-back" data-bs-dismiss="modal">Retour</button>
                    
                    {% block footerButtons %}{% endblock %}

                </div>

            {% endblock %}

        </div>

    </div>

</div>

{# When modal contains a form #}
{# If form errors, we have to trigger modal box display to show these errors to user #}

{% block formErrors %}

{% endblock %}
  